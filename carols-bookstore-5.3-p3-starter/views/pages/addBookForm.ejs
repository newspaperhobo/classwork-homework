<%- include('../partials/head') -%>

<h1>Add a new Book</h1>
<form action="/books" method="POST">
    <div>
        <label for="title">Title: *</label>
        <input type="text" name="title" id="title" required minength=1 />
    </div>

    <div>
        <!-- For now we will manually enter author information. When we move to databases, we will populate authors from our database -->
        <label for="author">Author: *</label>
        <input type="text" name="author" id="author" required minlength=5 />
    </div>

    <div>
        <label for="price">Price: *</label>
        <input type="number" name="price" id="price" min="1" required/>
    </div>

    <div>
        <label for="numSold">Copies Sold: </label>
        <input type="number" name="numSold" id="numSold" min="0" />
    </div>

    <div>
        <input type="submit" value="Submit"/>
    </div>

</form>

